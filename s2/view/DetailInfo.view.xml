<mvc:View
	controllerName="sap.ui.sample.poa.view.DetailInfo"
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" >
	<form:SimpleForm
		id="form"
		minWidth="1024"
		maxContainerCols="2" >
		<Label text="供货商编号"/>
		<Text text="{Id}"/>
		<Label text="供货商名称"/>
		<Text text="{Name}"/>
		<Label text="街道地址"/>
		<Text text="{Street}"/>
		<Label text="所属城市"/>
		<Text text="{City}, {Zip}"/>
		<Label text="所属国家"/>
		<Text text="{Country}"/>
	</form:SimpleForm>
</mvc:View>