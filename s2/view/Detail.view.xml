<mvc:View
	controllerName="sap.ui.sample.poa.view.Detail"
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" >
	<Page
		id="page"
		class="sapUiFioriObjectPage"
		title=" {i18n>detailTitle}"
		showNavButton="{device>/isPhone}"
		navButtonPress="handleNavBack" >
		<footer>
			<Bar>
				<contentRight>
					<ToolbarSpacer/>
					<Button
						text="{i18n>approveButtonText}"
						type="Accept"
						enabled="{cfg>/actionsEnabled}"
						press="handleApprove" />
					<Button
						text="{i18n>rejectButtonText}"
						type="Reject"
						enabled="{cfg>/actionsEnabled}"
						press="handleReject" />
					<Button
						icon="sap-icon://forward"
						enabled="{cfg>/actionsEnabled}"
						press="handleForward" />
				</contentRight>
			</Bar>
		</footer>
		<content>
			<ObjectHeader
				title="{
					path:'ID',
					formatter:'sap.ui.sample.poa.util.formatter.OrderIdWithLabel'	
				}"
				number="{Amount}"
				numberUnit="{CurrencyCode}" >
				<attributes>
					<ObjectAttribute
						text="{
							path:'CreatedAt',
							formatter:'sap.ui.sample.poa.util.formatter.DateWithLabel'
						}" />
					<ObjectAttribute
						text="{
							path:'CreatedByName',
							formatter:'sap.ui.sample.poa.util.formatter.CreatorWithLabel'
						}" />
				</attributes>
				<firstStatus>
					<ObjectStatus
						text="{
							path:'OrderingStatusDesc',
							formatter:'sap.ui.sample.poa.util.formatter.OrderingStatusWithLabel'	
						}"
						state="{
							path:'OrderingStatusDesc',
							formatter:'sap.ui.sample.poa.util.formatter.StatusState'
						}" />
				</firstStatus>
			</ObjectHeader>
			<IconTabBar
				expanded="{device>/isNoPhone}"
				select="handleTabSelect" >
				<items>
					<IconTabFilter
						key="Info"
						icon="sap-icon://hint">
						<mvc:XMLView viewName="sap.ui.sample.poa.view.DetailInfo"></mvc:XMLView>
					</IconTabFilter>
					<IconTabFilter
						key="Notes"
						icon="sap-icon://notes">
						<!-- content is lazy loaded -->
					</IconTabFilter>
					<IconTabFilter
						key="Attachments"
						icon="sap-icon://attachment">
						<!-- content is lazy loaded -->
					</IconTabFilter>
				</items>
			</IconTabBar>
			<Table
				id="lineItemList"
				items="{path:'PurchaseOrder_Items'}" >
				<headerToolbar>
					<Toolbar>
						<Label text="{i18n>lineItemTableHeader}" />
						<ToolbarSpacer />
						<Button
							id="lineItemViewButton"
							icon="sap-icon://drop-down-list"
							press="handleLineItemViewChange" />
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column>
						<header><Label text="产品" /></header>
					</Column>
					<Column
						width="4em"
						minScreenWidth="Tablet"
						demandPopin="true"
						hAlign="Center">
						<header><Label text="数量" /></header>
					</Column>
					<Column
						width="7em"
						minScreenWidth="Tablet"
						demandPopin="true"
						hAlign="Center" >
						<header><Label text="交付日期" /></header>
					</Column>
					<Column
						hAlign="Right" >
						<header><Label text="金额" /></header>
					</Column>
				</columns>
				<ColumnListItem
					type="Navigation"
					press="handleLineItemPress" >
					<cells>
						<ObjectIdentifier
							title="{PurchaseOrderItemID}"
							text="{ProductName}"/>
							<Text
								text="{
									path:'Quantity',
									formatter:'sap.ui.sample.poa.util.formatter.Quantity'
								}"/>
							<Text
								text="{
									path:'DeliveryDate',
									formatter:'sap.ui.sample.poa.util.formatter.Date'
								}"/>
						<ObjectNumber
							number="{Amount}"
							unit="{CurrencyCode}" />
					</cells>
				</ColumnListItem>
			</Table>
		</content>
	</Page>
</mvc:View>